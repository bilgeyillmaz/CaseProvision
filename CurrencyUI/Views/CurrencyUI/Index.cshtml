@using Entities.Concrete
@model List<CurrencyModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>#</th>
                <th>Unit</th>
                <th>Isim</th>
                <th>CurrencyName</th>
                <th>ForexBuying</th>
                <th>ForexSelling</th>
                <th>BanknoteBuying</th>
                <th>BanknoteSelling</th>
                <th>CrossRateUSD</th>
                <th>CrossRateOther</th>
                <th>Currency</th>

            </tr>
        </thead>
        <tbody>
            @foreach (CurrencyModel item in @ViewBag.currencyData)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Isim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrencyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForexBuying)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForexSelling)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BanknoteBuying)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BanknoteSelling)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CrossRateUSD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CrossRateOther)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Currency)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}